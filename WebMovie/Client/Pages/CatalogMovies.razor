@page "/"
@page "/catalogmovies"
@using WebMovie.Shared
@inject HttpClient Http
@inject IPopularMovieServices popularMovies
@inject IModalService modal

<div class="py-5">
    <div class="container">
        <div class="row hidden-md-up">
            @foreach (var item in movies)
            {
                var poster = string.Concat("https://image.tmdb.org/t/p/w500", item.poster_path);
                <div class="col-md-4">
                    <div class="cards-deck">
                        <div class="cards" style="width: 18rem; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.5s;">
                            <div class="card-header">
                                @item.title
                            </div>
                            <a @onclick="args => TapElement(item)" role="presentation" href="#detailPop" data-target="#detailPop" data-toggle="modal">
                                <img class="cards-img-top" src="@poster" alt="@item.title">
                            </a>
                            <div class="cards-footer">
                                Release Date: @item.release_date
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    List<Result> movies = new List<Result>();

    private string title = "";
    private string overview = "";

    protected override async Task OnInitializedAsync()
    {
        movies = await popularMovies.GetPopularMovies();
    }

    public void TapElement(Result movie)
    {
        var title = movie.title;
        var description = movie.overview;
    }

}
