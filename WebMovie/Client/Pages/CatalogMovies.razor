@page "/"
@page "/catalogmovies"
@using WebMovie.Shared
@inject HttpClient Http
@inject IPopularMovieServices popularMovies

<div class="py-5">
    <div class="container">
        <div class="row hidden-md-up">
            @foreach (var item in movies)
            {
                var poster = string.Concat("https://image.tmdb.org/t/p/w500", item.poster_path);
                <div class="col-md-4">
                    <div class="cards-deck">
                        <div class="cards" style="width: 18rem; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.5s;">
                            <div class="card-header">
                                @item.title
                            </div>
                            <a @onclick="@(() => OpenDetailMovie(item))" role="presentation">
                                <img class="cards-img-top" src="@poster" alt="@item.title">
                            </a>
                            <div class="cards-footer">
                                Release Date: @item.release_date
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<Animate Animation="Animations.FadeIn" Duration="TimeSpan.FromSeconds(0.5)" Delay="TimeSpan.FromSeconds(1)">
    @if (showModal)
    {
        <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">@movieTitle</h4>
                        <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <p>@movieOverview</p>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn" @onclick="@ModalCancel">Cancel</button>
                    </div>

                </div>
            </div>
        </div>
    }
</Animate>

@code {
    List<Result> movies = new List<Result>();
    bool showModal = false;
    public string movieTitle = "";
    public string movieOverview = "";

    protected override async Task OnInitializedAsync()
    {
        movies = await popularMovies.GetPopularMovies();
    }

    void ModalCancel() => showModal = false;

    public void OpenDetailMovie(Result movie)
    {
        movieTitle = movie.title;
        movieOverview = movie.overview;
        showModal = true;
    }
}
