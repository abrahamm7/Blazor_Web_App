@page "/"
@page "/catalogmovies"
@using WebMovie.Shared
@inject HttpClient Http
@inject IPopularMovieServices popularMovies


<div class="py-5">
    <div class="container">
        <div class="row hidden-md-up">
            @foreach (var item in movies)
            {
                var poster = string.Concat("https://image.tmdb.org/t/p/w500", item.poster_path);
                <div class="col-md-4">
                    <div class="cards-deck">
                        <div class="cards" style="width: 18rem; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.5s;">
                            <div class="card-header">
                                @item.title
                            </div>
                            <a @onclick="@(() => OpenDetailMovie(item))" role="presentation">
                                <img class="cards-img-top" src="@poster" alt="@item.title">
                            </a>
                            <div class="cards-footer" style="height:120px">
                                <p style="font-size:12px; font-weight:bold">Release Date:<span>@item.release_date</span></p>
                                <p style="font-size:12px; font-weight:bold">Rating:</p>
                                <RadzenArcGauge Style="width: 100px; height: 100px;">
                                    <RadzenArcGaugeScale Min="0" Max="10" X="0.2" Y="0.18">
                                        <RadzenArcGaugeScaleValue Value=@item.vote_average Fill="#80b918">
                                            <Template Context="value">
                                                <h4 style="font-size:11px;">
                                                    @value.Value
                                                </h4>
                                            </Template>
                                        </RadzenArcGaugeScaleValue>
                                    </RadzenArcGaugeScale>
                                </RadzenArcGauge>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


    <DetailsMovies titleMovie="@MovieDetail.title" 
                   overviewMovie="@MovieDetail.overview" 
                   posterMovie="@MovieDetail.poster_path" 
                   showAlert="@showAlert" 
                   showModal="@showModal">
    </DetailsMovies>



@code {

    List<Result> movies = new List<Result>();
    List<Result> moviesPlaylist = new List<Result>();
    Result MovieDetail = new Result();
    bool showModal = false;
    bool showAlert = false;


    protected override async Task OnInitializedAsync()
    {
        movies = await popularMovies.GetPopularMovies();
    }

    void ModalCancel() => showModal = false;

    public void OpenDetailMovie(Result movie)
    {
        MovieDetail.title = movie.title;
        MovieDetail.overview = movie.overview;
        MovieDetail.poster_path = string.Concat("https://image.tmdb.org/t/p/w500", movie.poster_path);
        showModal = true;
    }

    public void AddToPlaylist(Result movie)
    {
        moviesPlaylist.Add(movie);
        showAlert = true;
    }
}
